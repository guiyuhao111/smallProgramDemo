.nav {
  flex: 1;
  height: 3em;
  border: 3rpx solid #e8e8e8;
  border-right: 0;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #454545;
  font-size: 0.8rem;
  padding: 0.2rem 0;
}
.headImg{
  width: 100%;
  height: 180px;
}
.navicat {
  display: flex;
  flex-direction: row;
}

.nav.on {
  border-bottom-color: red;
  background: #f7f7f7;
}

.nav.off {
  border-bottom-color: #e8e8e8;
  background: #fff;
  color: #999;
}

.search {
  margin: 0.1em 2.5%;
  width: 95%;
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* border: 1px solid red; */
}

.search .searchInput{
  height: 1.8rem;
  position: relative;
  top: -0.2rem;
  padding-bottom: -0.2rem;
  font-size: 0.8rem;
  text-align: left;
  line-height: 3.0rem;
}

.search-image {
  position: absolute;
  left: 0.8rem;
  top: 0px;
  width: 0.8rem;
  height: 0.8rem;
  display: inline-block;
  vertical-align: top;
}

.orderInfo {
  position: relative;
  padding: 0.5rem 25% 0.5rem 0.5rem;
  background: #fff;
  margin-bottom: 0.25rem;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
}

.orderInfo .txt {
  font-size: 1rem;
  line-height: 1.1rem;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.orderInfo .info {
  color: #999;
  font-size: 0.6rem;
  line-height: 0.65rem;
  padding-top: 0.45rem;
}

.orderInfo .price {
  position: absolute;
  right: 0.5rem;
  top: 0.5rem;
  color: #ff6005;
  font-size: 0.8rem;
}

.orderInfo .name {
  color: #454545;
  font-size: 0.6rem;
  line-height: 0.65rem;
  padding-top: 0.45rem;
}

.orderInfo .date {
  color: #999;
  font-size: 0.6rem;
  line-height: 0.65rem;
  position: absolute;
  right: 0.5rem;
  bottom: 0.5rem;
}

.search .search-button {
  background: #ff6005;
  color: #fff;
  font-size: 0.8rem;
  margin-left: 2%;
  width: 20%;
  display: inline-block;
  height: 1.5rem;
  line-height: 1.25rem;
  vertical-align: top;
  border-radius: 0.25rem;
}
